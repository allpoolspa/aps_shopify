.header-bar.fixed {
    box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.30);
}

.header-bar__search-input {
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);

    header-bar__search-input:focus, &:hover, &:active {
        box-shadow: 0 5px 11px 0 rgba(0,0,0,0.18),0 4px 15px 0 rgba(0,0,0,0.15);
        transition: all .3s ease-out;

    }
    btn:hover {
        box-shadow: 0 5px 11px 0 rgba(0,0,0,0.18),0 4px 15px 0 rgba(0,0,0,0.15);
        transition: all .3s ease-out;
    }

}

input#mail, input#subscribe, input#Quantity, .btn, .btn--secondary, select, .social-sharing a,  {
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);

    &:hover,
    {
        box-shadow: 0 5px 11px 0 rgba(0,0,0,0.18),0 4px 15px 0 rgba(0,0,0,0.15);
        transition: all .3s ease-out;
    }
}

.icon, .nav-icon span {
    text-shadow: 0 5px 11px rgba(0,0,0,0.18), 0 5px 11px rgba(0,0,0,0.18);

    &:hover,
    {
        text-shadow: 0 7px 15px rgba(0,0,0,0.2), 0 7px 15px rgba(0,0,0,0.2);
        transition: all .3s ease-out;
    }
}

